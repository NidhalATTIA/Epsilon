{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
<div class="form-group">

    <div class="row">
        <div class="form-group form-group--col-6">
            <label for="register-pwd-inline" class="control-label">type user</label>
            {{ form_widget(form.type_user,{'attr':{'class':'form-control','id':'register-pwd2-inline'}})  }}
        </div>
    </div>




    <div class="row">
        <div class="form-group form-group--col-6">
            <label for="register-name-inline" class="control-label">Adresse Email</label>
            {{ form_widget(form.email,{'attr':{'class':'form-control', 'id':'register-name-inline'}})  }}
            {{ form_errors(form.email) }}
        </div>
        <div class="form-group form-group--col-6">
            <label for="register-lastname-inline" class="control-label">Nom d'utilisateur</label>
            {{ form_widget(form.username,{'attr':{'class':'form-control','id':'register-lastname-inline'}})  }}
            {{ form_errors(form.username) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group form-group--col-6">
            <label for="register-pwd-inline" class="control-label">Mot de passe</label>
            {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control','id':'register-pwd2-inline'}})  }}
            {{ form_errors(form.plainPassword.first) }}
        </div>
        <div class="form-group form-group--col-6">
            <label for="register-pwd2-inline" class="control-label">Répéter Mot de passe</label>
            {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control','id':"register-pwd2-inline"}})  }}
            {{ form_errors(form.plainPassword.second) }}
        </div>
    </div>





    <div class="row">
        <input type="submit" value="{{ 'registration.submit'|trans }}" id="register-submit" class="form__submit" style="margin-left: 450px" />
    </div >

    {{ form_end(form) }}
