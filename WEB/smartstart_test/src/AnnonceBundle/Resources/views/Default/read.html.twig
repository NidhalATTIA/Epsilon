{%  extends 'baseAdmin.html.twig' %}
     {% block body%}
         <div style="margin-top: 40px" class="container">
             <h1 style="margin-bottom: 40px" class="text-center">FEEDBACK</h1>
             <div class="row">
                 <table id="mytable" class="table table-bordred table-striped">
                     <thead style="background-color: #1b4679; color: white">
                     <th>contenu</th>
                     <th> Client</th>
                     <th>Freelancer</th>
                     </thead>

                     {% for feedback in Feed %}
                         <tbody>
                         <tr style="background-color: white">
                             <td>{{ feedback.contenu}}</td>
                             <td>{{ feedback.idClient}}</td>
                             <td>{{ feedback.idFreelancer}}</td>


                             {% if app.user.username == feedback.idClient or app.user.TypeUser == "admin" %}
                                 <td> <a href ="{{ path('club_modifier', {'id':feedback.id}) }}"><button class="btn btn-outline-info">Modifier</button> </a></td>
                                 <td> <a href ="{{ path('club_supprimer', {'id':feedback.id}) }}"><button class="btn btn-outline-danger">supprimer</button> </a></td>

                             {% endif %}



                         </tr>
                         </tbody>
                     {% endfor %}
                 </table>
             </div>
             <a href ="{{ path('smart_Create')}}"><button class="btn btn-secondary" style="margin: 20px;">ajouter</button> </a>
             <a href ="{{ path('read_note')}}"><button class="btn btn-secondary" style="margin: 20px;">Note</button> </a>
             <div class="navigation">
                 {{ knp_pagination_render(Feed) }}
             </div>
         </div>



     {% endblock %}