<table>
        <tr><td><h3>Add a formation</h3></td></tr>
<tr><td></td></tr>
{{ form_start(f) }}

    <tr>
          <td>Titre :*</td>
        <td>{{ form_widget(f.titre) }}</td>
    </tr>
     <tr>
         <td>Category of the formation:*</td>
          <td>{{ form_widget(f.idCategorieF) }}</td>
     </tr>
    <tr>
        <td>Description :* </td>
        <td>{{ form_widget(f.description) }}</td>
    </tr>
    <tr>
        <td>Lieu :* </td>
        <td>{{ form_widget(f.lieu) }}</td>
    </tr>
    <tr>
        <td>Price :*</td>
        <td>{{ form_widget(f.prix) }}</td>
    </tr>
    <tr>
        <td>Name of participant :* </td>
        <td>{{ form_widget(f.nbparticipants) }}</td>
    </tr>
    <tr>
        <td>Date of start </td>
        <td>{{ form_widget(f.datedebut) }}</td>
    </tr>
    <tr>
        <td>Date of end :*</td>
        <td> {{ form_widget(f.datefin) }}</td>
    </tr>

    <tr>
        <td> Organizer :*</td>
        <td> {{ form_widget(f.idClient) }}</td>
    </tr>
    <tr><td>{{ form_widget(f.save) }}</br></td></tr>
{{ form_end(f) }}

</table>
{{ form_end(f) }}


{% endblock %}


